{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "API Gateway",
    "port": 9090,
    "host": ["http://0.0.0.0:9090"],
    "timeout": "300000ms",
    "cache_ttl": "300s",
    "endpoints": [
        {
            "endpoint": "/",
            "method": "POST",
            "output_encoding": "no-op",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "backend": [
                {
                    "url_pattern": "/",
                    "encoding": "json",
                    "sd": "static",
                    "method": "POST",
                    "host": ["http://"],
                    "disable_host_sanitize": false
                }
            ]
        }
    ]
}